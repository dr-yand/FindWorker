<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="bottom|center_horizontal">
        <shape android:innerRadius="16dp"
		   android:shape="ring"
		   android:thickness="3dp"
		   android:useLevel="false" >
		
		  	<solid android:color="#ff808080" />
		 
			<size
			    android:height="70dp"
			    android:width="70dp" />
		</shape> 
    </item>   
    
    <item android:gravity="bottom|center_horizontal">
        <shape  android:innerRadius="0dp"
		   android:shape="ring"
		   android:thickness="16dp"
		   android:useLevel="false" >
		
		  <solid android:color="#dd808080" />
		 
		
		</shape>
    </item>    
    
    
</layer-list>
